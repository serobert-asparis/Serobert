#The function uses if and elif conditonal statements for each option of day
def day_choice(selected_day):
    drawing.clear()
    if selected_day == "Day 1":
        #result.value = "You Chose Day 1"
        #The folowing lines 32-35 are used to draw four squares representing the four classes of that day, in the corresponding rgb colors from above
        drawing.rectangle(110, 10, 290, 190, color=ablock)
        drawing.rectangle(110, 195, 290, 375, color=bblock)
        drawing.rectangle(110, 380, 290, 560, color=cblock)
        drawing.rectangle(110, 565, 290, 745, color=dblock)
        #The following lines 37-40 go in each corresponding box and write the block, class name,and time of each class.
        drawing.text(120,30,"(A block)  IB Chem HL  8:55-10:20", color="white", font="Helvetica", size="18", max_width=180)
        drawing.text(120,220,"(B block) IB English Lang SL 10:40-12:00", color="white", font="Helvetica", size="18", max_width=180)
